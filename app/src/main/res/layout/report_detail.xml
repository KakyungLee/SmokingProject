<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/report_spinner"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <ImageView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/common_google_signin_btn_text_dark"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="서울특별시 동대문구 답십리 1동 323-18호"
        android:layout_above="@+id/report"
        android:layout_margin="-10dp"
        android:textColor="@color/black"
        android:background="@color/mainColor"
        android:gravity="center_vertical"/>

    <EditText
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="이곳에 내용을 입력하세요."
        android:gravity="left"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <ImageButton
            android:id="@+id/open_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_gallery"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:tint="@color/mainColor"/>

        <ImageButton
            android:id="@+id/open_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_camera"
            android:layout_toRightOf="@+id/open_gallery"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:tint="@color/mainColor"/>
        <Button
            android:id="@+id/submit_report"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="submit"
            android:layout_alignParentRight="true"
            android:textColor="@color/mainColor"
            android:background="@color/white"/>
    </RelativeLayout>

</LinearLayout>
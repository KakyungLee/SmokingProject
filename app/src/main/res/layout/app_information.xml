<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/main_icon_color"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여기선 피지마"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkMain"
        android:layout_below="@+id/app_icon"/>

    <TextView
        android:id="@+id/app_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_info_developer"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkMain"
        android:layout_below="@+id/app_name"/>

    <TextView
        android:id="@+id/app_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_info_use_API"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkMain"
        android:layout_below="@+id/app_developer"/>

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_info_version"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/darkMain"
        android:layout_below="@+id/app_api"/>

</RelativeLayout>